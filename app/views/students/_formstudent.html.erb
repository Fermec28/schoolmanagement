<%= form_for @student do |f| %>

<div class="form-group">
  <%= f.label "Nombre:" %>   
  <%= f.text_field :name, class: "form-control" %><br />
</div>
<div class="form-group">
  <%= f.label "Apellidos:" %>   
  <%= f.text_field :surname , class: "form-control"%><br />
</div>
<div class="form-group">
  <%= f.label "Direccion:" %>   
  <%= f.text_field :adress, class: "form-control" %><br />
</div>
<div class="form-group">
  <%= f.label "Correo:" %>   
  <%= f.text_field :mail, class: "form-control" %><br />
</div>
  <%= f.submit %>
<% end %>